/* Grid basics
----------------------------------------------------------------------------------------------------------------------*/
.grid
  margin-left auto
  margin-right auto
  &:after
    content ''
    display table
    clear both

/* Grid gaps
----------------------------------------------------------------------------------------------------------------------*/
for i in (1..5)
  .grid.gap-{i}
    margin-left unit(-10 * i, 'px')
    margin-right unit(-10 * i, 'px')
    .col
      padding-left unit(10 * i, 'px')
      padding-right unit(10 * i, 'px')

/* Grid column separated through vertical line
----------------------------------------------------------------------------------------------------------------------*/
.grid .col.separated
  border-right 2px solid pale

@media only screen and (min-width 600px)
  .grid .col.separated-m
    border-right 2px solid pale

@media only screen and (min-width 900px)
  .grid .col.separated-l
    border-right 2px solid pale

@media only screen and (min-width 1200px)
  .grid .col.separated-xl
    border-right 2px solid pale

/* Grid column
----------------------------------------------------------------------------------------------------------------------*/
.grid .col
  float left
  box-sizing border-box
  margin-left auto
  left auto
  right auto

/* Grid columns small
----------------------------------------------------------------------------------------------------------------------*/
for i in (1..12)
  .grid .col.s{i}
    width: unit((100 / 12) * i, '%')

/* Grid columns small to medium
----------------------------------------------------------------------------------------------------------------------*/
@media only screen and (min-width 600px)
  for i in (1..12)
    .grid .col.m{i}
      width: unit((100 / 12) * i, '%')

/* Grid columns medium to somewhat large
----------------------------------------------------------------------------------------------------------------------*/
@media only screen and (min-width 900px)
  for i in (1..12)
    .grid .col.l{i}
      width: unit((100 / 12) * i, '%')

/* Grid columns somewhat large to large
----------------------------------------------------------------------------------------------------------------------*/
@media only screen and (min-width 1200px)
  for i in (1..12)
    .grid .col.xl{i}
      width: unit((100 / 12) * i, '%')

/* Grid columns large to very large
----------------------------------------------------------------------------------------------------------------------*/
@media only screen and (min-width: 1500px)
  for i in (1..12)
    .grid .col.xxl{i}
      width: unit((100 / 12) * i, '%')

/* Grid columns very large and up
----------------------------------------------------------------------------------------------------------------------*/
@media only screen and (min-width: 1800px)
  for i in (1..12)
    .grid .col.xxxl{i}
      width: unit((100 / 12) * i, '%')

/* Grid column seperators
----------------------------------------------------------------------------------------------------------------------*/
.grid .col.separated
      border-right grid_separation

@media only screen and (min-width: 600px)
