/* Container
----------------------------------------------------------------------------------------------------------------------*/
.page-container
  position absolute
  width 100%
  height 100%
  overflow auto

.container
  margin-left auto
  margin-right auto
  &.w-600
    width 600px
  &.w-900
    width 900px
  &.w-1200
    width 1200px
  &.w-1500
    width 1500px
  &.w-1800
    width 1800px

