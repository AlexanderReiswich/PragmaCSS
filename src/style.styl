/*
|-----------------------------------------------------------------------------------------------------------------------
| Colors
|-----------------------------------------------------------------------------------------------------------------------
|
| The color values can be defined in your global configuration.
|
*/

/* Text colors */
.primary
  color primary

.secondary
  color secondary

.tertiary
  color tertiary

.pale
  color pale

.light
  color light

.white
  color c_white

.black
  color c_black

.red
  color c_red

.green
  color c_green

.yellow
  color c_yellow

.orange
  color c_orange

.blue
  color c_blue

.violet
  color c_violet

/* link colors */
a
  &.primary:hover
      color primary_hover
  &.secondary:hover
      color secondary_hover
  &.tertiary:hover
      color tertiary_hover
  &.pale:hover
      color pale_hover
  &.light:hover
      color light_hover
  &.white:hover
      color c_white_hover
  &.black:hover
      color c_black_hover
  &.red:hover
      color c_red_hover
  &.green:hover
      color c_green_hover
  &.yellow:hover
      color c_yellow_hover
  &.orange:hover
      color c_orange_hover
  &.blue:hover
      color c_blue_hover
  &.violet:hover
      color c_violet_hover

/* Hover state overrides for text color */
.primary--hover:hover,
a.primary--hover:hover
  color primary

.secondary--hover:hover,
a.secondary--hover:hover
  color secondary

.tertiary--hover:hover,
a.tertiary--hover:hover
  color tertiary

.pale--hover:hover,
a.pale--hover:hover
  color pale

.light--hover:hover,
a.light--hover:hover
  color light

.white--hover:hover,
a.white--hover:hover
  color c_white

.black--hover:hover,
a.black--hover:hover
  color c_black

.red--hover:hover,
a.red--hover:hover
  color c_red

.green--hover:hover,
a.green--hover:hover
  color c_green

.yellow--hover:hover,
a.yellow--hover:hover
  color c_yellow

.orange--hover:hover,
a.orange--hover:hover
  color c_orange

.blue--hover:hover,
a.blue--hover:hover
  color c_blue

.violet--hover:hover,
a.violet--hover:hover
  color c_violet

/* Background colors */
.primary-bg
  background-color primary

.secondary-bg
  background-color secondary

.tertiary-bg
  background-color tertiary

.pale-bg
  background-color pale

.light-bg
  background-color light

.white-bg
  background-color c_white

.black-bg
  background-color c_black

.red-bg
  background-color c_red

.green-bg
  background-color c_green

.yellow-bg
  background-color c_yellow

.orange-bg
  background-color c_orange

.blue-bg
  background-color c_blue

.violet-bg
  background-color c_violet

/* Hover state overrides for background color */
.primary-bg--hover:hover
  background-color primary

.secondary-bg--hover:hover
  background-color secondary

.tertiary-bg--hover:hover
  background-color tertiary

.pale-bg--hover:hover
  background-color pale

.light-bg--hover:hover
  background-color light

.white-bg--hover:hover
  background-color c_white

.black-bg--hover:hover
  background-color c_black

.red-bg--hover:hover
  background-color c_red

.green-bg--hover:hover
  background-color c_green

.yellow-bg--hover:hover
  background-color c_yellow

.orange-bg--hover:hover
  background-color c_orange

.blue-bg--hover:hover
  background-color c_blue

.violet-bg--hover:hover
  background-color c_violet

/*
|-----------------------------------------------------------------------------------------------------------------------
| Typography
|-----------------------------------------------------------------------------------------------------------------------
*/
.hero-text
  font-size t_hero_text

.headline
  font-size t_headline

.title
  font-size t_title

.subtitle
  font-size t_subtitle

.big
  font-size t_big

.normal
  font-size t_normal

.small
  font-size t_small

.tiny
  font-size t_tiny

.line-height-s
  line-height line_height_s

.line-height-m
  line-height line_height_m

.line-height-l
  line-height line_height_l

@media only screen and (max-width 1200px)
  .hero-text
    font-size round(t_hero_text * .7)

  .headline
    font-size round(t_headline * .8)

  .title
    font-size round(t_title * .9)

@media only screen and (max-width 900px)
  .hero-text
    font-size round(t_hero_text * .6)

  .headline
    font-size round(t_headline * .7)

  .title
    font-size round(t_title * .8)

@media only screen and (max-width 600px)
  .hero-text
    font-size round(t_hero_text * .5)

  .headline
    font-size round(t_headline * .6)

  .title
    font-size round(t_title * .7)
