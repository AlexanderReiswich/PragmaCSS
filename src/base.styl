    background $light
    border-color $light
    &:hover
      color $dark
      background white
      border-color white
    &:focus
      border-color $light-hover
  &.black-bg
    color white
    background $black
    border-color $black
    &:hover
      background $black-hover
      border-color $black-hover
    &:focus
      border-color $black-hover
  &.red-bg
    color white
    background $red
    border-color $red
    &:hover
      background $red-hover
      border-color $red-hover
    &:focus
      border-color $red-hover
  &.orange-bg
