/*
|-----------------------------------------------------------------------------------------------------------------------
| Buttons
|-----------------------------------------------------------------------------------------------------------------------
|
| Utility classes allow you to create all sorts of buttons, but chances are that you don't want to individually
| define the appearance of every single button in your project. Most likely, the majority of buttons in your project
| will have one particular look and feel, with a few modifications for specific situations.
|
| The .btn class aims to give you an easy way to do exactly that. You can configure most of the buttons appearance
| through global variables. Additionally, the following modifiers can be used:
|
| Blank    : Transparent background
| Ghost    : Transparent background with a border
| Disabled : Disabled appearance
|
*/
.btn, a.btn
  display inline-block
  box-sizing border-box
  color btn_color
  background btn_bg
  border btn_border
  border-radius btn_corner_radius
  font-size btn_font_size
  line-height  btn_line_height
  letter-spacing btn_letter_spacing
  text-transform btn_text_transform
  text-align center
  padding btn_padding
  vertical-align middle
  transition btn_transition
  outline 0
  -webkit-tap-highlight-color transparent
  cursor pointer
  box-shadow btn_shadow
  text-decoration none
  filter btn_filter
  &:focus
    color btn_focus_color
    background btn_focus_bg
    border-color btn_focus_border_color
    filter btn_focus_filter
  &:hover
    color btn_hover_color
    background btn_hover_bg
    border-color btn_hover_border_color
    filter btn_hover_filter
  &:active
    color btn_active_color
    background btn_active_bg
    border-color btn_active_border_color
    filter btn_active_filter
  &.dark-bg
    color white
    background dark
    border-color dark
    &:focus
      border-color dark_hover
    &:hover
      background dark_hover
      border-color dark_hover
  &.soft-bg
    color white
    background soft
    border-color soft
    &:hover
      background soft_hover
      border-color soft_hover
    &:focus
      border-color soft_hover
  &.pale-bg
    color dark
    background pale
    border-color pale
    &:hover
      background pale_hover
      border-color pale_hover
    &:focus
      border-color dark
  &.light-bg
    color dark
    background light
    border-color light
    &:hover
      color dark
      background white
      border-color white
    &:focus
      border-color light_hover
  &.white-bg
    color dark
    background c_white
    border-color c_white
    &.primary
      color primary
      &:hover
        color primary_hover
    &.dark
      color dark
      &:hover
        color dark_hover
    &.soft
      color soft
      &:hover
        color soft_hover
    &.black
      color c_black
      &:hover
        color c_black_hover
    &.red
      color c_red
      &:hover
        color c_red_hover
    &.orange
      color c_orange
      &:hover
        color c_orange_hover
    &.green
      color c_green
      &:hover
        color c_green_hover
    &.blue
      color c_blue
      &:hover
        color c_blue_hover
    &.violet
      color c_violet
      &:hover
        color c_violet_hover
    &:hover
      color primary
      background c_white_hover
      border-color c_white_hover
    &:focus
      border-color pale
  &.black-bg
    color white
    background c_black
    border-color c_black
    &:hover
      background c_black_hover
      border-color c_black_hover
    &:focus
      border-color c_black_hover
  &.red-bg
    color white
    background c_red
    border-color c_red
    &:hover
      background c_red_hover
      border-color c_red_hover
    &:focus
      border-color c_red_hover
  &.orange-bg
    color white
    background c_orange
    border-color c_orange
    &:hover
      background c_orange_hover
      border-color c_orange_hover
    &:focus
      border-color c_orange_hover
  &.green-bg
    color white
    background c_green
    border-color c_green
    &:hover
      background c_green_hover
      border-color c_green_hover
    &:focus
      border-color c_green_hover
  &.yellow-bg
    color dark
    background c_yellow
    border-color c_yellow
    &:hover
      background c_yellow_hover
      border-color c_yellow_hover
    &:focus
      border-color c_yellow_hover
  &.blue-bg
    color white
    background c_blue
    border-color c_blue
    &:hover
      background c_blue_hover
      border-color c_blue_hover
    &:focus
      border-color c_blue_hover
  &.violet-bg
    color white
    background c_violet
    border-color c_violet
    &:hover
      background c_violet_hover
      border-color c_violet_hover
    &:focus
      border-color c_violet_hover
  &.ghost
    color primary
    background transparent
    border-color primary
    &.dark, &.dark-bg
      border-color dark
      color dark
      &:hover
        border-color dark_hover
        color dark_hover
    &.soft, &.soft-bg
      border-color soft
      color soft
    &.pale, &.pale-bg
      border-color pale
      color pale
    &.light, &.light-bg
      border-color light
      color light
    &.white, &.white-bg
      border-color c_white
      color c_white
      &:hover
        border-color light
        color light
    &.black, &.black-bg
      border-color c_black
      color c_black
    &.red, &.red-bg
      border-color c_red
      color c_red
    &.orange, &.orange-bg
      border-color c_orange
      color c_orange
    &.green, &.green-bg
      border-color c_green
      color c_green
    &.yellow, &.yellow-bg
      border-color c_yellow
      color c_yellow
    &.blue, &.blue-bg
      border-color c_blue
      color c_blue
    &.violet, &.violet-bg
      border-color c_violet
      color c_violet
    &:hover, &:focus
      color primary_hover
      background transparent
      border-color primary_hover
  &.blank, &.blank:hover, &.blank:focus
    border-color transparent
    background transparent
    color primary
    &:hover, &:focus
      color primary_hover

.btn
  &.disabled,
  &:disabled,
  &.disabled:hover,
  &:disabled:hover
    background-color btn_disabled_bg !important
    color btn_disabled_color !important
    border-color btn_disabled_border_color !important
    cursor default

.btn
  &.disabled *,
  &:disabled *
    pointer-events none

