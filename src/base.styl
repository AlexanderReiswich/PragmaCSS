.input-icon input.v-0,
.input-icon input.vh-0
  padding-left $default-font-size + $input-border

.input-icon input.v-xs,
.input-icon input.vh-xs
  padding-left $default-font-size + $input-border + ($size-xs * 2) - 2

.input-icon input.v-s,
.input-icon input.vh-s
  padding-left $default-font-size + $input-border + ($size-s * 2) - 4

.input-icon input.v-m,
.input-icon input.vh-m
  padding-left $default-font-size + $input-border + ($size-m * 2) - 8

.input-icon input.v-l,
.input-icon input.vh-l
  padding-left $default-font-size + $input-border + ($size-l * 2) - 8

.input-icon input.v-xl,
.input-icon input.vh-xl
  padding-left $default-font-size + $input-border + ($size-xl * 2) - 12

.input-icon input.v-0 + :not(input),
.input-icon input.vh-0 + :not(input)
  width $default-font-size + $input-border + ($size-xs * 2)

.input-icon input.v-xs + :not(input),
.input-icon input.vh-xs + :not(input)
  width $default-font-size + $input-border + ($size-xs * 2)

.input-icon input.v-s + :not(input),
.input-icon input.vh-s + :not(input)
  width $default-font-size + ($size-s * 2)

.input-icon input.v-m + :not(input),
.input-icon input.vh-m + :not(input)
  width $default-font-size + ($size-m * 2)

.input-icon input.v-l + :not(input),
.input-icon input.vh-l + :not(input)
  width $default-font-size + ($size-l * 2)

.input-icon input.v-xl + :not(input),
.input-icon input.vh-xl + :not(input)
  width $default-font-size + ($size-xl * 2)

/*
|-----------------------------------------------------------------------------------------------------------------------
| Spinner loader
|-----------------------------------------------------------------------------------------------------------------------
*/
[class^='spinner'],
[class*=' spinner']
  position relative
  display inline-block
  width 12px
  height 12px
  top 2px
  border-radius 100%
  border-width 2px
  border-style solid
  border-right-color rgba(0,0,0,0.08) !important
  border-bottom-color rgba(0,0,0,0.08) !important
  border-left-color rgba(0,0,0,0.08) !important
  border-top-color $primary
  transition .3s all cubic-bezier(.48,.01,.54,1)
  animation spinner-rotation 1.6s cubic-bezier(.41, .26, .2, .62)
  animation-iteration-count infinite

.spinner-s
  width 8px
  height 8px

.spinner-l
  width 18px
  height 18px

.spinner-xl
  width 30px
  height 30px
  border-width 3px

.spinner-2xl
  width 80px
  height 80px
  border-width 5px

.spinner-3xl
  width 150px
  height 150px
  border-width 5px

[class^='spinner'].negative,
[class*=' spinner'].negative
  border-right-color rgba(255,255,255,0.12) !important
  border-bottom-color rgba(255,255,255,0.12) !important
  border-left-color rgba(255,255,255,0.12) !important

@keyframes spinner-rotation
  0%
    transform rotate(0)
  to
    transform rotate(2turn)

/*
|-----------------------------------------------------------------------------------------------------------------------
| Transformicons
|-----------------------------------------------------------------------------------------------------------------------
*/
[class*='tico-']
  position relative
  display inline-block
  width 30px
  height 30px
  transition .4s all cubic-bezier(0,.9,.45,1)
  vertical-align middle
  transform-origin center
  text-align left !important

[class*='tico-'] span,
[class*='tico-'] span:before,
[class*='tico-'] span:after
  position absolute
  content ''
  background $dark
  border-color $dark
  border-radius $transformicon-corner-radius
  border-width 4px
  border-style none
  width 4px
  transition .4s all cubic-bezier(0,.9,.45,1)

[class*='tico-'].tico-thin span,
[class*='tico-'].tico-thin span:before,
[class*='tico-'].tico-thin span:after
  width 2px
  border-width 2px

[class*='tico-'] > i
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  margin auto

.tico-s
  transform scale(0.4)
  width 12px
  height 12px

.tico-s > i
  top -6px
  left -6px

.tico-m
  transform scale(0.5)
  width 15px
  height 15px

.tico-m > i
  top -6px
  left -6px

.tico-l
  transform scale(0.68)
  width 20px
  height 20px

.tico-l > i
  top -2px
  left -2px

.tico-xl
  transform scale(1)

.tico-2xl
  transform scale(1.45)
  width 44px
  height 44px

.tico-3xl
  transform scale(2)
  width 60px
  height 60px

/* Hamburger icon
----------------------------------------------------------------------------------------------------------------------*/
.tico-hamburger span,
.tico-hamburger span:before,
.tico-hamburger span:after
  height 26px

.tico-hamburger span
  transform translate(13px, -6px) rotate(-90deg)

.tico-hamburger span:before
  transform translateX(-8px)

.tico-hamburger span:after
  transform translateX(-16px)

/* Search icon
----------------------------------------------------------------------------------------------------------------------*/
.tico-search span,
.tico-search span:before,
.tico-search span:after
  height 10px
  transform translate(2px, 10px)

.tico-search span
  height 8px
  width 8px
  background transparent !important
  border-style solid
  border-radius 100%
  transform rotate(45deg) translate(10px, -3px)

.tico-search span:after
  opacity 0

.tico-search.tico-thin span
  width 8px

.tico-search.tico-thin span:before
  transform translate(3px, 9px)

/* Edit icon
----------------------------------------------------------------------------------------------------------------------*/
.tico-edit span,
.tico-edit span:before,
.tico-edit span:after
  width 6px
  transform rotate(45deg) translate(13px, -2px)

.tico-edit span
  height 18px
  border-radius 0

.tico-edit span:before
  height 4px
  border-radius $transformicon-corner-radius $transformicon-corner-radius 0 0
  transform translate(0, -5.5px)

.tico-edit span:after
  transform rotate(45deg) translate(12.2px, 11px)
  height 4.2px
  width 4.2px
  border-radius 0

.tico-edit.tico-thin span
  transform rotate(45deg) translate(13px, -4px)
  width 3px

.tico-edit.tico-thin span:before
  height 3px
  width 3px
  transform translate(0, -4.5px)

.tico-edit.tico-thin span:after
  transform translate(1px, 17px)
  height 3px
  width 1px

/* Close icon
----------------------------------------------------------------------------------------------------------------------*/
.tico-close span,
.tico-close span:before,
.tico-close span:after
  height 21px
  transform rotate(-90deg) translate(0, 0)

.tico-close span
  transform rotate(45deg) translate(12px, -6px)

.tico-close span:after
  opacity 0

/* Plus icon
----------------------------------------------------------------------------------------------------------------------*/
.tico-plus span,
.tico-plus span:before,
.tico-plus span:after
  height 21px
  transform translate(0, 0)

.tico-plus span
  transform rotate(0) translate(13px, 4.5px)

.tico-plus span:before
  transform rotate(-90deg)

.tico-plus span:after
  opacity 0

/* Minus icon
----------------------------------------------------------------------------------------------------------------------*/
.tico-minus span,
.tico-minus span:before,
.tico-minus span:after
  height 21px

.tico-minus span
  transform rotate(-90deg) translate(-4.5px, 13px)

.tico-minus span:before
  opacity 0

.tico-minus span:after
  opacity 0

/* Options icon
----------------------------------------------------------------------------------------------------------------------*/
.tico-options span,
.tico-options span:before,
.tico-options span:after
  transform translate(0, 0)

.tico-options span
  height 4px
  transform translate(13px, 5.5px)

.tico-options span:before
  height 4px
  transform translate(0, 7.5px)

.tico-options span:after
  height 4px
  transform translate(0, 14.5px)

.tico-options.tico-thin span,
.tico-options.tico-thin span:before,
.tico-options.tico-thin span:after
  height 3px

/* Alert icon
----------------------------------------------------------------------------------------------------------------------*/
.tico-alert span,
.tico-alert span:before,
.tico-alert span:after
  transform translate(0, 0)

.tico-alert span
  height 14px
  transform translate(13px, 4.5px)

.tico-alert span:before
  height 4px
  transform translate(0, 16.5px)

.tico-alert span:after
  opacity 0

.tico-alert.tico-thin span:before
  height 3px

/* Info icon
----------------------------------------------------------------------------------------------------------------------*/
.tico-info span,
.tico-info span:before,
.tico-info span:after
  transform translate(0, 0)

.tico-info span
  height 4px
  transform translate(13px, 5.5px)

.tico-info span:before
  height 12px
  transform translate(0, 6.5px)

.tico-info span:after
  height 5px
  transform rotate(90deg) translate(6px, 1.5px)

.tico-info.tico-thin span
  height 3px

.tico-info.tico-thin span:before
  transform translate(0, 5.5px)

.tico-info.tico-thin span:after
  transform rotate(90deg) translate(4px, 1.5px)

/* Check icon
----------------------------------------------------------------------------------------------------------------------*/
.tico-check span,
.tico-check span:before,
.tico-check span:after
  height 10px
  transform rotate(-90deg) translate(-11px, -4px)

.tico-check span
  height 18px
  transform rotate(45deg) translate(15px, -7px)

.tico-check span:after
  opacity 0

.tico-check.tico-thin span
  transform rotate(45deg) translate(16px, -8px)

.tico-check.tico-thin span:before
  transform rotate(-90deg) translate(-13px, -4px)

/* Chevron icon
----------------------------------------------------------------------------------------------------------------------*/
[class*='tico-chevron'] span,
[class*='tico-chevron'] span:before,
[class*='tico-chevron'] span:after
  height 14px
  transform rotate(-90deg) translate(5px, -5px)

[class*='tico-chevron'] span
  transform rotate(-45deg) translate(7px, 16px)

[class*='tico-chevron'] span:after
  opacity 0

[class*='tico-chevron'].tico-thin span
  transform rotate(-45deg) translate(9px, 17px)

[class*='tico-chevron'].tico-thin span:before
  transform rotate(-90deg) translate(6px, -6px)


/* Arrow icon
----------------------------------------------------------------------------------------------------------------------*/
[class*='tico-arrow'] span,
[class*='tico-arrow'] span:before,
[class*='tico-arrow'] span:after
  height 18px

[class*='tico-arrow'] span
  transform translate(13px, 6px)

[class*='tico-arrow'] span:before
  transform rotate(-45deg) translate(3.5px, 0.5px)
  height 12px

[class*='tico-arrow'] span:after
  transform rotate(45deg) translate(-3.5px, 0.5px)
  height 12px

[class*='tico-arrow'].tico-thin span
  transform translate(13px, 6px)

[class*='tico-arrow'].tico-thin span:before
  height 10px
  transform rotate(-45deg) translate(3.5px, 0.5px)

[class*='tico-arrow'].tico-thin span:after
  height 10px
  transform rotate(45deg) translate(-3.5px, 0.5px)

/* Rotation adjustments
----------------------------------------------------------------------------------------------------------------------*/

/* Right */
.tico-chevron-right,
.tico-arrow-right
  transform rotate(90deg)

/* Down */
.tico-chevron-down
.tico-arrow-down
  transform rotate(180deg)

/*Left */
.tico-chevron-left,
.tico-arrow-left
  transform rotate(-90deg)

