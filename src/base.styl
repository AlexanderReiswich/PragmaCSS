/*
|-----------------------------------------------------------------------------------------------------------------------
| PragmaCSS. Prototype fast, scale with confidence.
|-----------------------------------------------------------------------------------------------------------------------
|
| base.css
| ======
|
| This stylesheet offers solid base classes for the most essential ui elements, such as form elements and buttons.
| Classes from style.css can be used to further customize them.
|
*/

/*
|-----------------------------------------------------------------------------------------------------------------------
| HTML
|-----------------------------------------------------------------------------------------------------------------------
|
| This section takes care of the default appearance of all common HTML tags.
|
*/
div
  box-sizing border-box

body
  margin 0

html, body
  background-color body_background
  font font_weight_regular standard_font_size / standard_line_height primary_font
  color dark
  -webkit-text-size-adjust 100%
  letter-spacing standard_letter_spacing

a
  background-color transparent
  outline none
  color link_color
  text-decoration none
  transition link_transition
  &:hover
    color link_color_hover
    -webkit-tap-highlight-color transparent
    text-decoration none

h1, h2, h3, h4, h5, h6
  font-weight font_weight_regular
  font-size standard_font_size
  line-height standard_line_height
  margin 0

p
  margin 0

i, em
  font-style italic

b, strong
  font-weight font_weight_bold

abbr[title]
  border-bottom none

sub,
sup
  font-size 75%
  line-height 0
  position relative
  vertical-align baseline

sub
  bottom -0.25em

sup
  top -0.5em

img
  border-style none

button,
input,
optgroup,
select,
textarea
  font-family inherit
  font-size 100%
  line-height standard_line_height
  border none
  background transparent
  outline none
  margin 0

button
  border none
  background transparent
  outline none
  &:hover
    cursor pointer
  &:focus
    outline none

button,
input
  overflow visible

button,
select
  text-transform none

button,
[type="button"],
[type="reset"],
[type="submit"]
  -webkit-appearance none

button::-moz-focus-inner,
[type="button"]::-moz-focus-inner,
[type="reset"]::-moz-focus-inner,
[type="submit"]::-moz-focus-inner
  border-style none
  padding 0

progress
  vertical-align baseline

textarea
  overflow auto

[type="checkbox"],
[type="radio"]
  box-sizing border-box
  padding 0

[type="number"]::-webkit-inner-spin-button,
[type="number"]::-webkit-outer-spin-button
  height auto

[type="search"]
  -webkit-appearance textfield
  outline 0

[type="search"]::-webkit-search-decoration
  -webkit-appearance none

::-webkit-file-upload-button
  -webkit-appearance button
  font inherit

details
  display block

summary
  display list-item

template
  display none

[hidden]
  display none

/* Placeholders
----------------------------------------------------------------------------------------------------------------------*/
::-webkit-input-placeholder
  color placeholder_color

:-moz-placeholder
  color placeholder_color

::-moz-placeholder
  color placeholder_color

:-ms-input-placeholder
  color placeholder_color

/* Field sets
----------------------------------------------------------------------------------------------------------------------*/
fieldset
  border none
  padding 0
  margin 0
  legend
    width 100%
    box-sizing border-box
    color inherit
    display table
    max-width 100%
    padding 0
    white-space normal

/* Blockquote
----------------------------------------------------------------------------------------------------------------------*/
blockquote
  font-size standard_font_size
  line-height standard_line_height

/* Lists
----------------------------------------------------------------------------------------------------------------------*/
ol
  list-style-type decimal
  padding 0

ul
  list-style-type square
  padding 0
  li
    margin-bottom offset_xs
    li
      list-style-type circle

dt
  font-weight font_weight_bold

dd, li
  margin-left offset_s

dd > *, li > *
  margin-top 0

/* Code
----------------------------------------------------------------------------------------------------------------------*/
pre,
code,
kbd,
samp
  display block
  font-family monospace

/*
|-----------------------------------------------------------------------------------------------------------------------
| Horizontal rule
|-----------------------------------------------------------------------------------------------------------------------
*/
hr
  background none
  border none
  border-bottom hr_style
  width auto
  height 0
  overflow hidden
  box-sizing content-box
  &.dotted
    border-bottom-style dashed
  &.dashed
    border-bottom-style dashed
  &.s
    border-width hr_m
  &.m
    border-width hr_m
  &.l
    border-width hr_l
  &.short
    width hr_short
  &.negative
    border-bottom-color hr_negative

/*
|-----------------------------------------------------------------------------------------------------------------------
| Tables
|-----------------------------------------------------------------------------------------------------------------------
*/
table
  border-collapse collapse
  text-align left
  width 100%
  tr
    th
      color table_th_color
      font-weight font_weight_bold
      padding 10px 8px
      border-bottom table_th_border
    td
      padding 10px 8px
      border-bottom table_td_border
  tbody tr:last-child
    td
      border-bottom none
  &.zebra
    tr:nth-of-type(even) td
      background-color table_zebra_bg
  &.hoverable
    tbody tr:hover td
      background-color table_row_hover_bg
  &.table-fixed
    table-layout fixed

table tr td:first-of-type,
table tr th:first-of-type
  padding-left 0

table tr td:last-of-type,
table tr th:last-of-type
  padding-right 0

/*
|-----------------------------------------------------------------------------------------------------------------------
| Form inputs
|-----------------------------------------------------------------------------------------------------------------------
*/
input,
input[type=text],
input[type=email],
input[type=password],
textarea,
select
  background-color input_bg
  border input_border
  border-radius input_corner_radius
  outline none
  width 100%
  font-size input_font_size
  line-height input_line_height
  padding input_padding
  box-shadow none
  box-sizing border-box
  transition input_transition

input,
input[type=text]:disabled,
input[type=email]:disabled,
input[type=password]:disabled,
textarea:disabled,
select:disabled
  color input_disabled_color
  border-color input_disabled_border_color

textarea
  overflow-y hidden
  resize none
  transition height 0, width 0

input,
input[type=text]:hover,
input[type=email]:hover,
input[type=password]:hover,
textarea:hover,
select:hover
  color input_hover_color
  border-color input_hover_border_color

input,
input[type=text]:focus,
input[type=email]:focus,
input[type=password]:focus,
textarea:focus,
select:focus
  color input_focus_color
  border-color input_focus_border_color

