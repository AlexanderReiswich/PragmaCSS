/*
|-----------------------------------------------------------------------------------------------------------------------
| PragmaCSS. Prototype fast, scale with confidence.
|-----------------------------------------------------------------------------------------------------------------------
|
| base.css
| ======
|
| This stylesheet offers solid base classes for the most essential ui elements, such as form elements and buttons.
| Classes from style.css can be used to further customize them.
|
*/

/*
|-----------------------------------------------------------------------------------------------------------------------
| HTML
|-----------------------------------------------------------------------------------------------------------------------
|
| This section takes care of the default appearance of all common HTML tags.
|
*/
div
  box-sizing border-box

body
  margin 0

html, body
  background-color $body-background
  font $font-weight-regular $standard-font-size / $standard-line-height $primary-font
  color $default-color
  -webkit-text-size-adjust 100%
  letter-spacing $standard-letter-spacing

a
  background-color transparent
  outline none
  color $link-color
  text-decoration $link-decoration
  transition $link-transition
  &:hover
    color $link-color-hover
    -webkit-tap-highlight-color transparent
    text-decoration none

h1, h2, h3, h4, h5, h6
  font-weight $font-weight-regular
  font-size $standard-font-size
  line-height $standard-line-height
  margin 0

p
  margin 0

i, em
  font-style italic

b, strong
  font-weight $font-weight-bold

abbr[title]
  border-bottom none

sub,
sup
  font-size 75%
  line-height 0
  position relative
  vertical-align baseline

sub
  bottom -0.25em

sup
  top -0.5em

img
  border-style none

button,
input,
optgroup,
select,
textarea
  font-family inherit
  font-size 100%
  line-height $standard-line-height
  border none
  background transparent
  outline none
  margin 0

button
  border none
  background transparent
  outline none
  &:hover
    cursor pointer
  &:focus
    outline none

button,
input
  overflow visible

button,
select
  text-transform none

button,
[type="button"],
[type="reset"],
[type="submit"]
  -webkit-appearance none

button::-moz-focus-inner,
[type="button"]::-moz-focus-inner,
[type="reset"]::-moz-focus-inner,
[type="submit"]::-moz-focus-inner
  border-style none
  padding 0

progress
  vertical-align baseline

textarea
  overflow auto

[type="checkbox"],
[type="radio"]
  box-sizing border-box
  padding 0

[type="number"]::-webkit-inner-spin-button,
[type="number"]::-webkit-outer-spin-button
  height auto

[type="search"]
  -webkit-appearance textfield
  outline 0

[type="search"]::-webkit-search-decoration
  -webkit-appearance none

::-webkit-file-upload-button
  -webkit-appearance button
  font inherit

details
  display block

summary
  display list-item

template
  display none

[hidden]
  display none

/* Placeholders
----------------------------------------------------------------------------------------------------------------------*/
::-webkit-input-placeholder
  color $placeholder-color

:-moz-placeholder
  color $placeholder-color

::-moz-placeholder
  color $placeholder-color

:-ms-input-placeholder
  color $placeholder-color

/* Field sets
----------------------------------------------------------------------------------------------------------------------*/
fieldset
  border none
  padding 0
  margin 0
  legend
    width 100%
    box-sizing border-box
    color inherit
    display table
    max-width 100%
    padding 0
    white-space normal

/* Blockquote
----------------------------------------------------------------------------------------------------------------------*/
blockquote
  font-size $standard-font-size
  line-height $standard-line-height

/* Lists
----------------------------------------------------------------------------------------------------------------------*/
ol
  list-style-type decimal
  padding 0

ul
  list-style-type circle
  padding 0
  li
    margin-bottom $offset-xs
    li
      list-style-type square

ul.inline-list
  list-style none
  li
    display inline-block
    margin-bottom 0
    margin-left 0
    li
      list-style none

dt
  font-weight $font-weight-bold

dd, li
  margin-left $offset-s

dd > *, li > *
  margin-top 0

/* Code
----------------------------------------------------------------------------------------------------------------------*/
pre,
code,
kbd,
samp
  display block
  font-family monospace

/*
|-----------------------------------------------------------------------------------------------------------------------
| Horizontal rule
|-----------------------------------------------------------------------------------------------------------------------
*/
hr
  background none
  border none
  border-bottom $hr-style
  width auto
  height 0
  overflow hidden
  box-sizing content-box
  &.dotted
    border-bottom-style dashed
  &.dashed
    border-bottom-style dashed
  &.s
    border-width $hr-s
  &.m
    border-width $hr-m
  &.l
    border-width $hr-l
  &.short
    width $hr-short
  &.negative
    border-bottom-color $hr-negative

/*
|-----------------------------------------------------------------------------------------------------------------------
| Tables
|-----------------------------------------------------------------------------------------------------------------------
*/
table
  display table
  border-collapse collapse
  text-align left
  width 100%
  tr
    th
      color $table-th-color
      font-weight $font-weight-bold
      padding 10px 8px
      border-bottom $table-th-border
    td
      padding 10px 8px
      border-bottom $table-td-border
  tbody tr:last-child
    td
      border-bottom none
  &.zebra
    tr:nth-of-type(even) td
      background-color $table-zebra-bg
  &.hoverable
    tbody tr:hover td
      background-color $table-row-hover-bg
  &.table-fixed
    table-layout fixed

table tr td:first-of-type,
table tr th:first-of-type
  padding-left 0

table tr td:last-of-type,
table tr th:last-of-type
  padding-right 0

/*
|-----------------------------------------------------------------------------------------------------------------------
| Form inputs
|-----------------------------------------------------------------------------------------------------------------------
*/
input,
input[type=text],
input[type=email],
input[type=password],
textarea,
select
  background-color $input-bg
  border $input-border
  border-radius $input-corner-radius
  outline none
  width 100%
  font-size $input-font-size
  line-height $input-line-height
  padding $input-padding
  box-shadow none
  box-sizing border-box
  transition $input-transition

input,
input[type=text]:disabled,
input[type=email]:disabled,
input[type=password]:disabled,
textarea:disabled,
select:disabled
  color $input-disabled-color
  border-color $input-disabled-border-color

textarea
  overflow-y hidden
  resize none
  transition height 0, width 0

input:hover,
input[type=text]:hover,
input[type=email]:hover,
input[type=password]:hover,
textarea:hover,
select:hover
  color $input-hover-color
  border-color $input-hover-border-color

input:focus,
input[type=text]:focus,
input[type=email]:focus,
input[type=password]:focus,
textarea:focus,
select:focus
  color $input-focus-color
  border-color $input-focus-border-color

