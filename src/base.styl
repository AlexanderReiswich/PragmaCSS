/*
|-----------------------------------------------------------------------------------------------------------------------
| Spinner loader
|-----------------------------------------------------------------------------------------------------------------------
*/
[class^='spinner'],
[class*=' spinner']
  position relative
  display inline-block
  width 12px
  height 12px
  top 2px
  border-radius 100%
  border-width 2px
  border-style solid
  border-right-color rgba(0,0,0,0.08) !important
  border-bottom-color rgba(0,0,0,0.08) !important
  border-left-color rgba(0,0,0,0.08) !important
  border-top-color $primary
  transition .3s all cubic-bezier(.48,.01,.54,1)
  animation spinner-rotation 1.6s cubic-bezier(.41, .26, .2, .62)
  animation-iteration-count infinite

.spinner-s
  width 8px
  height 8px

.spinner-l
  width 16px
  height 16px

.spinner-xl
  width 42px
  height 42px
  border-width 3px

.spinner-2xl
  width 80px
  height 80px
  border-width 5px

.spinner-3xl
  width 150px
  height 150px
  border-width 5px

[class^='spinner'].negative,
[class*=' spinner'].negative
  border-right-color rgba(255,255,255,0.12) !important
  border-bottom-color rgba(255,255,255,0.12) !important
  border-left-color rgba(255,255,255,0.12) !important

@keyframes spinner-rotation
  0%
    transform rotate(0)
  to
    transform rotate(2turn)
