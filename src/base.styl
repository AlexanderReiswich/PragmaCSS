/* Checkbox and Radio
----------------------------------------------------------------------------------------------------------------------*/
.checkbox,
.radio
  font-weight $font-weight-regular
  letter-spacing $extend-letter-spacing-s
  text-transform none

.checkbox *,
.radio *
  vertical-align middle

.checkbox input[type=checkbox],
.radio input[type=radio]
  position fixed
  opacity 0
  z-index -9

.checkbox-indicator,
.radio-indicator
  position relative
  display inline-block
  top -2px
  width 20px
  height 20px
  margin-right 5px
  background-color $input-bg
  border $input-border
  border-radius $input-corner-radius
  transition $input-transition

/* Checkbox indicator */
.checkbox-indicator:before,
.checkbox-indicator:after
  position absolute
  content ''
  width 5px
  border-radius $transformicon-corner-radius
  background $primary
  transition .4s all cubic-bezier(0,.9,.45,1)
  transform-origin bottom
  opacity 0

.checkbox-indicator:before
  transform rotate(-45deg) scaleY(.2) translate(10px, -5px)
  height 10px
  left 7px
  top 5px

.checkbox-indicator:after
  transform rotate(45deg) scaleY(.2) translate(-5px, -10px)
  height 23px
  left 5px
  top -7px

.checkbox input[type=checkbox]:checked + .checkbox-indicator:before
  transform rotate(-45deg) scaleY(1) translate(0, 0)
  opacity 1

.checkbox input[type=checkbox]:checked + .checkbox-indicator:after
  transform rotate(45deg) scaleY(1) translate(0, 0)
  opacity 1

.checkbox input[type=checkbox]:hover + .checkbox-indicator,
.radio input[type=radio]:hover + .radio-indicator
  border-color $pale

.checkbox input[type=checkbox]:focus + .checkbox-indicator,
.radio input[type=radio]:focus + .radio-indicator
  border-color $soft

.checkbox input[type=checkbox]:checked:focus + .checkbox-indicator
  border-color $pale

/* Radio indicator */
.radio-indicator
  border-radius 100%

.radio-indicator:before
  position absolute
  content ''
  width 14px
  height 14px
  top 3px
  left 3px
  background $primary
  border-radius 100%
  transition .4s all cubic-bezier(0,.9,.45,1)
  opacity 0
  transform scale(.2)

.radio input[type=radio]:checked + .radio-indicator:before
  opacity 1
  transform scale(1)

/* Checkbox and Radio size-controls */
.checkbox-indicator.size-xs,
.radio-indicator.size-xs
  transform scale(0.6)
  margin -3px 0 -3px -4px

.checkbox-indicator.size-s,
.radio-indicator.size-s
  transform scale(0.77)
  margin -2px 0 -2px -2px

.checkbox-indicator.size-m,
.radio-indicator.size-m
  transform scale(1)

.checkbox-indicator.size-l,
.radio-indicator.size-l
  transform scale(1.23)
  margin 5px 12px 5px 3px

.checkbox-indicator.size-xl,
.radio-indicator.size-xl
  transform scale(1.6)
  margin 10px 18px 10px 7px

/* Disabled states */
.checkbox input[type=checkbox]:disabled + .checkbox-indicator,
.radio input[type=radio]:disabled + .radio-indicator
  pointer-events none

.checkbox input[type=checkbox]:disabled + .checkbox-indicator:before,
.radio input[type=radio]:disabled + .radio-indicator:before
  background $light

.checkbox input[type=checkbox]:disabled + .checkbox-indicator:after,
.radio input[type=radio]:disabled + .radio-indicator:after
  background $light

.checkbox input[type=checkbox]:disabled:hover + .checkbox-indicator,
.radio input[type=radio]:disabled:hover + .radio-indicator
  border-color $light


