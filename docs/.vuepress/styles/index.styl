@import '~src/global.styl'
@import '~src/base.styl'
@import '~src/utilities.styl'

h1
  font-size font_size_2xl
  font-weight font_weight_bold
  letter-spacing extend_letter_spacing_l
  text-transform uppercase
  margin-bottom offset_xl

h2,
.page .content:not(.custom) > h2
  font-size font_size_xl
  font-weight font_weight_regular
  letter-spacing extend_letter_spacing_m
  margin-bottom offset_l
  padding-bottom offset_s
  border-bottom 2px solid dark

h3,
.page .content:not(.custom) > h3
  font-size font_size_xl
  font-weight font_weight_bold
  letter-spacing extend_letter_spacing_s
  margin-bottom offset_s
  margin-top offset_m
  padding-top 0
  color primary

h4,
.page .content:not(.custom) > h4
  font-size font_size_l
  font-weight font_weight_bold
  margin-bottom offset_m

h5
  font-size font_size_l
  font-weight font_weight_regular

h6
  font-size font_size_m
  font-weight font_weight_bold

p
  margin offset_s 0 offset_m 0
  line-height loosen_line_height_s

.content code
  display inline-block

.navbar .site-name
  color primary
  font-weight font_weight_bold

.page-nav .inner
  border-top 2px solid light

.navbar
  border-width 2px

.sidebar
  border-width 2px

.sidebar ul li
  margin-bottom 0

ul li li
  position relative
  list-style-type none

a.sidebar-link
  border-left none
  font-size font_size_l
  padding 12px 12px 12px 16px
  margin-left 0

a.sidebar-link.active
  border-left-color pale

a.sidebar-link
  position relative

.sidebar .sidebar-sub-headers
  padding 0

.sidebar-sub-headers a.sidebar-link
  color soft
  font-size font_size_s
  padding-left offset_l

.sidebar-sub-headers li:last-child a.sidebar-link
  padding-bottom offset_l

.sidebar-sub-headers a.sidebar-link.active
  font-weight font_weight_bold
  color primary

ul li li a.sidebar-link:before
  content ''
  position absolute
  background primary
  border-radius 2px
  transition .15s ease all
  top 8px
  left 7px
  width 2px
  height 8px
  background transparent

ul li li a.sidebar-link:hover:before,
ul li li a.sidebar-link.active:before
  top 6px
  left 6px
  width 4px
  height 12px
  background primary

.search-box input
  border 2px light solid

.content hr
  border-top 3px solid light
  margin 30px 0

.content a.header-anchor
  padding-right 0

.subtitle
  font-size font_size_xl

.big
  font-size font_size_l

table
  display table

table tr
  border-top none

table th,
table td
  border none

.custom-block.tip
  background light
